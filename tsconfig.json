{
    "compilerOptions": {
        "target": "ES2020",
        "module": "ES2020",
        "moduleResolution": "Node",
        "strict": true,
        "strictNullChecks": true,
        "noImplicitAny": true,
        "declaration": true,
        "declarationDir": "./lib",
        "outDir": "./lib",
        "allowSyntheticDefaultImports": true // generating docs requires commonjs modules
    },
    "include": [
        "./**/*" // we need this for type definitions
    ],
    "exclude": [
        "./lib",
        "./tests"
    ]
}
