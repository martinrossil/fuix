{
    "compilerOptions": {
        "target": "ES2021",
        "module": "ESNext",
        "moduleResolution": "Node",
        "strict": true,
        "strictNullChecks": true,
        "noImplicitAny": true,
        "declaration": true,
        "declarationDir": "./lib",
        "outDir": "./lib",
        "allowSyntheticDefaultImports": true // generating docs requires commonjs modules
    },
    "exclude": ["tests/**/*"] // don't include test files for library build
}
